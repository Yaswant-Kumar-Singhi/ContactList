<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

        <!--Our CSS File-->
        <link rel="stylesheet" href="/css/home.css">

    </head>
    <body>
        
        <header>
            <nav>
                <h1 id="page-heading">
                        <i class="fa fa-address-book"></i>
                        My contact List
                    </h1>
            </nav>
        </header>
        
        <div>
            <ul>
                <% for (let i of Contact) { %> 
                     <li>
                         <center>
                         <div id="eachItem">
                            <div id="actionItem">
                                <a href="/delete-contact/?id=<%= i._id %>">     
                                <i class="fa fa-window-close" aria-hidden="true"></i>
                                </a>
                            </div>
                            <div id="eachItemContent">
                                <div><%= i.name %></div>
                                                              
                            </div>   
                            
                            <div id="eachItemContent">
                                
                                <div><%= i.phone %> </div>                               
                            </div>

                        </div>
                    </center>
                     </li>
                    <% } %>
            </ul>
            
        </div>
        <div id="addContactForm">
        <form action="/add-contact" method="POST">
            <input type="text" name="name" placeholder="Enter a name" required>
            <input type="number" name="phone" placeholder="Enter Number">
            <input type="submit" value="Add Contact">
        </form>
        </div>
    

        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>
